#EdPrefix, #EdSuffix {
    padding: 0; 
    margin: 0; 
    border: none; 
    background: transparent;
    color: #000000;
}

#EdBase {
    padding: 0 2px; 
    margin: 0; 
    border: none; 
    background: transparent;
    color: #2b6cb0;                
    font-weight: 600;              
    border-bottom: 1px dashed rgba(43,108,176,0.45);
}

#EdBase:hover {
    background: rgba(77, 94, 112, 0.18);
}

#EdBase:focus {
    border-bottom: 2px solid #2b6cb0;
    background: transparent;
}
